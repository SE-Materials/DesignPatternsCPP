{
    "tasks": [
        {
            "label": "create-build-dir",
            "type": "shell",
            "command" : "cmd",
            "args": [
                "/C", 
                "if not exist",
                "${fileDirname}\\build\\",
                "mkdir", 
                "${fileDirname}\\build\\"
            ]
        },
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fd:",
                "${fileDirname}\\build\\${fileBasenameNoExtension}.pdb",
                "/Fo:",
                "${fileDirname}\\build\\${fileBasenameNoExtension}.obj",
                "/Fe:",
                "${fileDirname}\\build\\${fileBasenameNoExtension}.exe",
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger.",
            "dependsOn": [
                "create-build-dir"
            ]
        }
    ],
    "version": "2.0.0"
}